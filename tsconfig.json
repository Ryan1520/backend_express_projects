{
  "compilerOptions": {
    "target": "ES2016",             
    "module": "commonjs",           
    "moduleResolution": "node",     
    "outDir": "./dist",             
    "rootDir": "./src",             
    "esModuleInterop": true,        
    "forceConsistentCasingInFileNames": true,
    "strict": true,                 
    "skipLibCheck": true,           
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}